@model IEnumerable<Rep.Produto> 
@{
    ViewBag.Title = "Index";
}


@Html.ActionLink("Cadastrar", "CadastrarCliente", "Home")
@Html.ActionLink("Home", "Index", "Home")
@Html.ActionLink("Listar Cliente", "ListarCliente", "Cliente")
@Html.ActionLink("Produtos","ListarProduto","Produto")


<table border="1">
    
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.preco)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.tipo)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.lote)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantidade)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.validade)
        </th>
    </tr>

    @foreach (var item in Model) { 
    
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.validade)
            </td>
        </tr>
        
    }
</table>

